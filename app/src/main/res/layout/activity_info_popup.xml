<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".infoPopup">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/info_title"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:textStyle="bold|italic"
            android:textSize="20sp"
            android:textColor="@color/himmelsklila"
            android:text="Guide to shutting off alarms"
            android:gravity="center" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/info_background"
            android:padding="10dp"
            android:layout_marginBottom="10dp">

            <TextView
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:textStyle="bold|italic"
                android:textSize="18sp"
                android:textColor="@color/himmelsklila"
                android:text="1." />

            <TextView
                android:id="@+id/hint1"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:textStyle="bold"
                android:gravity="center_vertical"
                android:text="@string/hint_1"
                android:textColor="@color/himmelsklila" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/info_background"
            android:padding="10dp"
            android:layout_marginBottom="10dp">

            <TextView
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:textStyle="bold|italic"
                android:textSize="18sp"
                android:textColor="@color/himmelsklila"
                android:text="2." />

            <TextView
                android:id="@+id/hint2"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:textStyle="bold"
                android:gravity="center_vertical"
                android:text="@string/hint_2"
                android:textColor="@color/himmelsklila" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/info_background"
            android:padding="10dp"
            android:layout_marginBottom="10dp">

            <TextView
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:textStyle="bold|italic"
                android:textSize="18sp"
                android:textColor="@color/himmelsklila"
                android:text="3." />

            <TextView
                android:id="@+id/hint3"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:textStyle="bold"
                android:gravity="center_vertical"
                android:text="@string/hint_3"
                android:textColor="@color/himmelsklila" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/info_background"
            android:padding="10dp"
            android:layout_marginBottom="10dp">

            <TextView
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:textStyle="bold|italic"
                android:textSize="18sp"
                android:textColor="@color/himmelsklila"
                android:text="4." />

            <TextView
                android:id="@+id/hint4"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:textStyle="bold"
                android:gravity="center_vertical"
                android:text="@string/hint_4"
                android:textColor="@color/himmelsklila" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/info_background"
            android:padding="10dp"
            android:layout_marginBottom="10dp">

            <TextView
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:textStyle="bold|italic"
                android:textSize="18sp"
                android:textColor="@color/himmelsklila"
                android:text="5." />

            <TextView
                android:id="@+id/hint5"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:textStyle="bold"
                android:gravity="center_vertical"
                android:text="@string/hint_5"
                android:textColor="@color/himmelsklila" />

        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/cancel_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="Close"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.888"
        app:layout_constraintStart_toStartOf="parent"
        android:textColor="@color/himmelsklila"/>
</androidx.constraintlayout.widget.ConstraintLayout>